/* pages/media/video.wxss */
.page{
  display: flex;
  flex-direction: column;
  width: 100%;
}

.video{
  position: relative;
}

.video-copyright{
  position: absolute;
  right: 0;
  color: #fff;
  padding:20rpx 30rpx;
}

.video-barrage {
  position: absolute;
  right: 0;
  top: 50%;
  margin-right: 30rpx;
  transform: translateY(-50%);
}

.video-barrage .barrage-btn{
  display: inline-block;
  background-color: #fff;
  border-radius: 30rpx;
  padding: 10rpx 30rpx;
  color: #888888;
  line-height: 1;
  font-size: 20rpx;
  border: 2rpx solid #f1f1f1;
}