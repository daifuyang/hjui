/* 布局属性
** 列表布局
*/

/* 简单列表 */

.hj-list {
  border-top: 1rpx #f5f5f5 solid;
}

.hj-list .hj-list-header{
    background-color: #e0e0e0;
    color: #212121;
    padding: 16rpx 30rpx;
    font-size: 24rpx;
}

.hj-list .hj-list-item {
  display: flex;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx #f5f5f5 solid;
}

.hj-list .hj-list-item .icon {
  margin-right: 20rpx;
}

.hj-list .hj-list-item .hj-content {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-right: 30rpx;
}

/* 无icon下划线 */

.hj-list .hj-no-icon-border {
  padding: 0 0 0 30rpx;
}

.hj-list .hj-no-icon-border .icon {
  padding: 20rpx 0;
}

.hj-list .hj-no-icon-border .hj-content {
  margin-right: 0rpx;
  padding-right: 30rpx;
  border-bottom: 2rpx #f5f5f5 solid;
}

.hj-list .hj-list-item .hj-more {
  color: #757575;
  display: flex;
  align-items: center;
}

.hj-list .hj-list-item .hj-list-media {
  width: 200rpx;
  height: 150rpx;
  margin-right: 30rpx;
  overflow: hidden;
}

.hj-list .hj-list-item .hj-list-media image {
  width: 200rpx !important;
  height: 150rpx !important;
}

.hj-list .hj-list-item .hj-media-full{
  width: 100% !important;
  height: 400rpx !important;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-right: 0rpx;
  overflow: hidden;
}

.hj-list .hj-list-item .hj-media-full image{
  width: 100% !important;
  height: 400rpx !important;
}

.hj-list .hj-list-item .hj-content .hj-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 400;
}

.hj-list .hj-list-item .hj-content .hj-desc {
  font-size: 28rpx;
  color: #999;
}

/* 辅助属性
   溢出隐藏
 */

.hj_ellipsis_1 {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.hj_ellipsis_2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* flex弹性布局 */

.hj-flex {
  display: flex;
}

.hj-flex-center{
  display: flex;
  align-items: center;
  justify-content: center
}

.hj-flex-row{
  flex-direction: row;
}

.hj-flex-coloum{
  flex-direction: column;
}

.hj-flex-1 {
  flex: 1;
}

.hj-justify-content-center{
  justify-content: center;
}

.hj-justify-content-end{
  justify-content: flex-end;
}

.hj-align-items-center{
  align-items: center
}


