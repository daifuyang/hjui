/* pages/calendar/index.wxss */
.header{
  position: relative;
  width: 100%;
  left: 0;
  min-height: 780rpx;
}

.header image{
  width: 100%;
  height: 320rpx;
}

.header .intro_learn_day,.intro_learn_time{
  position: absolute;
  padding: 20rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  left: 20rpx;
}

.header .intro_learn_time{
  top: 70rpx;
  left: 135rpx;
}

.header .big{
  font-size: 60rpx;
}

.header .calendar{
  position: absolute;
  top: 170rpx;
  width: 100%;
}

.card{
  box-sizing: border-box;
  padding: 20rpx 80rpx 10rpx 80rpx;
  border-radius: 20rpx;
  width: 100%;
  box-shadow:0px 0px 16rpx 0px rgba(221,221,221,0.71)
}

.header .date{
  text-align: center;
  color: #504C4B;
}

.row{
  margin-left: -30rpx;
  margin-right: -30rpx;
}

.row .item{
  width: 14.285%;
  float: left;
  text-align: center;
  margin-top: 30rpx;
  color: #AAAEB3;
  font-size: 24rpx;
}

.clearfix{
  clear: both;
}

.header .days{
  padding-bottom: 60rpx;
}

.header .days .day{
    font-weight: 400;
    color: #393C40;
    font-size: 28rpx;
}

.day .day_item{
  width: 14.285%;
  float: left;
  text-align: center;
  color: #393C40;
  font-size: 28rpx;
  margin: 0 auto;
  margin-bottom: 30rpx;
}

.day .day_item .icon{
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  display: block;
}

.day .day_item .active{
  background:rgba(245,166,35,1);
  color: #fff !important;
  border-radius: 50%;
}

.mission .title{
  font-size: 28rpx;
  color:rgba(80,76,75,1);
  font-weight: 600;
  padding-top: 10rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px #f5f5f5 solid;
  margin-bottom: 20rpx;
}

.hj-list{
  border: none;
}

.hj-list .hj-list-item{
  border-bottom: none;
  padding-left: 0;
  padding-right:0;
}

.hj-list .hj-list-item .hj-content{
  font-size:32rpx;
  font-weight:500;
  color:rgba(80,76,75,1);
}

.hj-list .hj-list-item .btn{  
  display: inline-block;
  border-radius:15px;  
  padding: 7rpx 30rpx;
  font-size: 26rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
  background:linear-gradient(167deg,rgba(251,210,73,1) 0%,rgba(245,166,35,1) 100%);
}

.btn-success{
  background:linear-gradient(307deg,rgba(236,236,236,1) 0%,rgba(219,219,219,1) 96%) !important;
}