.hj-relative{
  width: 100%;
  position: relative;
}

.hj-absolute{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
}

/* 格子布局 */
.hj-row{
  overflow: hidden;
	margin: 0;
} 

.hj-row-padded {
	margin-left: -28.125rpx;
	margin-right: -28.125rpx;
}
.hj-row-padded [class*=hj-col-] {
	padding:-28.125rpx;
}
[class*=hj-col-] {
  box-sizing: border-box;
}
.hj-col-1,.hj-col-2,.hj-col-3,.hj-col-4,.hj-col-5,.hj-col-6,.hj-col-7,.hj-col-8,.hj-col-9,.hj-col-10,.hj-col-11,.hj-col-5 {
	position: relative;
	float: left;
}
.hj-col-12 {
	width: 100%;
	position: relative;
}
