/* 表单样式 */
.text-area{
  display: block;
  width: 100%;
  
}

.text-area textarea{
  box-sizing: border-box;
  width: 100%;
  margin-top: 20rpx;
  height: 140rpx;
  padding: 20rpx;
  border:1px solid rgba(245,245,245,1);
}

/* 下边阴影 */
.hj-border-shadow{
  box-shadow:0px 4rpx 4rpx 0px rgba(169,165,157,0.07);
  border:2rpx solid rgba(239,242,255,1);
}

/* 通用tab按钮 */
.hj-tab{
  display: flex;
  text-align: center;
  font-size: 28rpx;
  color: #828282;
  border-bottom: 2rpx solid #f5f5f5;
  box-shadow: 0px 0px 10rpx #f5f5f5;

}

.hj-tab-item{
  flex: 1;
  padding: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.active{
  color: #F5A623;
}

.hj-tab-item .ud-line{
  display: none;
}

.active .ud-line{
  position: absolute;
  bottom: 0;
  display:block;
  width:40rpx;
  height:6rpx;
  background:rgba(245,166,35,1);
  border-radius:4px;
  left: 50%;
  transform: translateX(-50%);
}

/* 默认按钮hj-btn */
.hj-btn{
  background: #e0e0e0;
  text-align: center;
  border-radius: 8rpx;
  padding: 10rpx 40rpx;
  display: inline-block;
  font-size: 28rpx;
}

.hj-btn-primary{
  color: #ffffff;
  background-color: #00bcd4;
}
.hj-btn-success{
  color: #ffffff;
  background-color: #009688;
}

.hj-btn-info{
  color: #ffffff !important;
  background-color: #03a9f4 !important;
}

.hj-btn-warning{
  color: #ffffff !important;
  background-color: #ffc107 !important;
}
.hj-btn-danger{
  color: #ffffff !important;
  background-color: #e51c23 !important;
}

.hj-btn-block{
  display: block;
  width: 100%;
  font-size: 32rpx;
  padding: 15rpx 0;
}

/* 镂空按钮 */
.hj-btn-outlined{
  background: transparent !important;
  border: 1px solid #bdbdbd;
}

.hj-btn-default.hj-btn-outlined {
	color: #bdc3c7 !important;
	border: 1px solid #dcdcdc !important;
}
.hj-btn-primary.hj-btn-outlined {
	color: #00bcd4 !important;
	border: 1px solid #00bcd4 !important;
}
.hj-btn-success.hj-btn-outlined {
	color: #009688 !important;
	border: 1px solid #009688 !important;
}
.hj-btn-info.hj-btn-outlined {
	color: #03a9f4 !important;
	border: 1px solid #03a9f4 !important;
}
.hj-btn-warning.hj-btn-outlined {
	color: #ffc107 !important;
	border: 1px solid #ffc107 !important;
}
.hj-btn-danger.hj-btn-outlined {
	color: #e51c23 !important;
	border: 1px solid #e51c23 !important;
}

/* 主题按钮 */
.hj-theme-yellow{
  color: #fff;
  background: linear-gradient(167deg,rgba(251,210,73,1) 0%,rgba(245,166,35,1) 100%);
  border-radius: 44rpx;
  text-align: center;
  box-sizing: border-box;
}

.hj-theme-grey{
