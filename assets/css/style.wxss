/**app.wxss**/

/* 辅助属性
** 文本属性
*/

page, .page {
  line-height: 1.5;
  font-size: 32rpx;
  color: #212121;
  background-color: #f5f5f5;
  outline: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

h1, .h1 {
  font-size: 48rpx;
  font-weight: bold;
  color: #000;
  margin-bottom: 20rpx;
}

h2, .h2 {
  font-size: 40rpx;
  font-weight: bold;
  color: #000;
  margin-bottom: 20rpx;
}

h3, .h3 {
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
  margin-bottom: 20rpx;
}

h4, .h4 {
  font-size: 28rpx;
  font-weight: bold;
  color: #000;
  margin-bottom: 20rpx;
}

h5, .h5 {
  font-size: 28rpx;
  font-weight: normal;
  color: #757575;
}

h6, .h6 {
  font-size: 28rpx;
  font-weight: normal;
  color: #757575;
}

p, .p {
  font-size: 0.7rem;
  color: #757575;
  margin-bottom: 30rpx;
}

/* 辅助属性
** 颜色属性
*/

.hj-text-primary {
  color: #00bcd4 !important;
}

.hj-text-success {
  color: #009688 !important;
}

.hj-text-info {
  color: #03a9f4 !important;
}

.hj-text-warning {
  color: #ffc107 !important;
}

.hj-text-danger {
  color: #e51c23 !important;
}

.hj-bg-white {
  background-color: #fff !important;
}

/* 背景颜色 */
.hj-text-center{
  text-align: center
}
/* 辅助属性
** 图片文本
*/

.wrap_img image {
  width: 100%;
}

/* 布局属性
** 列表布局
*/

/* 简单列表 */

.hj-list {
  border-top: 1rpx #f5f5f5 solid;
}

.hj-list .hj-list-header{
    background-color: #e0e0e0;
    color: #212121;
    padding: 16rpx 30rpx;
    font-size: 24rpx;
}

.hj-list .hj-list-item {
  display: flex;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx #f5f5f5 solid;
}

.hj-list .hj-list-item .icon {
  margin-right: 20rpx;
}

.hj-list .hj-list-item .hj-content {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-right: 30rpx;
}

/* 无icon下划线 */

.hj-list .hj-no-icon-border {
  padding: 0 0 0 30rpx;
}

.hj-list .hj-no-icon-border .icon {
  padding: 20rpx 0;
}

.hj-list .hj-no-icon-border .hj-content {
  margin-right: 0rpx;
  padding-right: 30rpx;
  border-bottom: 2rpx #f5f5f5 solid;
}

.hj-list .hj-list-item .hj-more {
  color: #757575;
  display: flex;
  align-items: center;
}

.hj-list .hj-list-item .hj-list-media {
  width: 200rpx;
  height: 150rpx;
  margin-right: 30rpx;
  overflow: hidden;
}

.hj-list .hj-list-item .hj-list-media image {
  width: 200rpx !important;
  height: 150rpx !important;
}

.hj-list .hj-list-item .hj-media-full{
  width: 100% !important;
  height: 400rpx !important;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-right: 0rpx;
  overflow: hidden;
}

.hj-list .hj-list-item .hj-media-full image{
  width: 100% !important;
  height: 400rpx !important;
}

.hj-list .hj-list-item .hj-content .hj-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 400;
}

.hj-list .hj-list-item .hj-content .hj-desc {
  font-size: 28rpx;
  color: #999;
}

/* 辅助属性
   溢出隐藏
 */

.hj_ellipsis_1 {
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
}

.hj_ellipsis_2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* flex弹性布局 */

.hj-flex {
  display: flex;
}

.hj-flex-center{
  display: flex;
  align-items: center;
  justify-content: center
}

.hj-flex-row{
  flex-direction: row;
}

.hj-flex-coloum{
  flex-direction: column;
}

.hj-flex-1 {
  flex: 1;
}

.hj-justify-content-center{
  justify-content: center;
}

.hj-align-items-center{
  align-items: center
}

/* 布局熟悉 */

.hj-content-padded {
  padding: 20rpx 30rpx;
}

.hj-margin-0{
  margin: 0rpx !important;
}

.hj-margin-t-10{
  margin-top: 20rpx;
}

.hj-margin-r-5{
  margin-right: 10rpx;
}

.hj-padded-10{
  padding: 20rpx;
}

.hj-padded-t-10{
  padding-top: 20rpx;
}

.hj-padded-b-10{
  padding-bottom: 20rpx;
}

.hj-relative{
  width: 100%;
  position: relative;
}

.hj-absolute{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
}

/* 表单样式 */
.text-area{
  display: block;
  width: 100%;
  
}

.text-area textarea{
  box-sizing: border-box;
  width: 100%;
  margin-top: 20rpx;
  height: 140rpx;
  padding: 20rpx;
  border:1px solid rgba(245,245,245,1);
}

/* 下边阴影 */
.hj-border-shadow{
  box-shadow:0px 4rpx 4rpx 0px rgba(169,165,157,0.07);
  border:2rpx solid rgba(239,242,255,1);
}